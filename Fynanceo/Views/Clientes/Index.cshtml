@model IEnumerable<Fynanceo.Models.Cliente>

@{
    ViewData["Title"] = "Clientes Cadastrados";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary">
            <i class="fas fa-users me-2"></i>@ViewData["Title"]
        </h1>
        <a href="@Url.Action("Cadastrar")" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Novo Cliente
        </a>
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="tabela-clientes">
                    <thead class="table-primary">
                        <tr>
                            <th>Nome</th>
                            <th>CPF/CNPJ</th>
                            <th>Telefone</th>
                            <th>Classificação</th>
                            <th>Status</th>
                            <th>Data Cadastro</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NomeCompleto</td>
                                <td>@item.CpfCnpj</td>
                                <td>@item.Telefone</td>
                                <td>
                                    <span class="badge @(item.Classificacao == "VIP" ? "bg-warning" :
                                                                                              item.Classificacao == "Frequente" ? "bg-info" : "bg-secondary")">
                                    @item.Classificacao
                                </span>
                            </td>
                            <td>
                                <span class="badge @(item.Ativo ? "bg-success" : "bg-danger")">
                                    @(item.Ativo ? "Ativo" : "Inativo")
                                </span>
                            </td>
                            <td>@item.DataCadastro.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("Detalhes", new { id = item.Id })"
                                       class="btn btn-info" title="Detalhes">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Editar", new { id = item.Id })"
                                       class="btn btn-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="@Url.Action("Excluir", new { id = item.Id })"
                                          class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este cliente?');">
                                        <button type="submit" class="btn btn-danger" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                                                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th {
            border-top: none;
            font-weight: 600;
        }

        .btn-group .btn {
            border-radius: 0.375rem;
            margin: 0 2px;
        }

        #tabela-clientes tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
            transition: background-color 0.2s ease;
        }
    </style>
}