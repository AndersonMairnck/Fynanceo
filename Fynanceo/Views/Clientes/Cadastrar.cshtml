@model Fynanceo.ViewModels.ClienteViewModel
@using Fynanceo.Utils

@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary">
            <i class="fas fa-user-plus me-2"></i>@ViewData["Title"]
        </h1>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Voltar
        </a>
    </div>

    <!-- Alertas -->
    @await Html.PartialAsync("_AlertasPartial")

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Cadastrar" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-id-card me-2"></i>Dados Pessoais
                        </h5>

                        <div class="mb-3">
                            <label asp-for="NomeCompleto" class="form-label"></label>
                            <input asp-for="NomeCompleto" class="form-control" data-maiuscula="titulo" />
                            <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CpfCnpj" class="form-label"></label>
                                    <input asp-for="CpfCnpj" class="form-control" data-mask="cpfcnpj" />
                                    <span asp-validation-for="CpfCnpj" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DataNascimento" class="form-label"></label>
                                    <input asp-for="DataNascimento" type="date" class="form-control" />
                                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Telefone" class="form-label"></label>
                                    <input asp-for="Telefone" class="form-control" data-mask="telefone" />
                                    <span asp-validation-for="Telefone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Classificacao" class="form-label"></label>
                            <select asp-for="Classificacao" class="form-select">
                                <option value="Normal">Normal</option>
                                <option value="Frequente">Frequente</option>
                                <option value="VIP">VIP</option>
                            </select>
                            <span asp-validation-for="Classificacao" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-map-marker-alt me-2"></i>Endereço Principal
                        </h5>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Logradouro" class="form-label"></label>
                                    <input asp-for="Logradouro" class="form-control" data-maiuscula="titulo" />
                                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Numero" class="form-label"></label>
                                    <input asp-for="Numero" class="form-control" />
                                    <span asp-validation-for="Numero" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Complemento" class="form-label"></label>
                            <input asp-for="Complemento" class="form-control" />
                            <span asp-validation-for="Complemento" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Bairro" class="form-label"></label>
                                    <input asp-for="Bairro" class="form-control" data-maiuscula="titulo" />
                                    <span asp-validation-for="Bairro" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Cep" class="form-label"></label>
                                 
                                    <input asp-for="Cep" class="form-control" data-mask="cep" />
                                    <span asp-validation-for="Cep" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Cidade" class="form-label"></label>
                                    <input asp-for="Cidade" class="form-control" data-maiuscula="titulo" />
                                    <span asp-validation-for="Cidade" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Estado" class="form-label"></label>
                                    <input asp-for="Estado" class="form-control" maxlength="2" data-maiuscula="tudo"/>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Referencia" class="form-label"></label>
                            <input asp-for="Referencia" class="form-control" />
                            <span asp-validation-for="Referencia" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-sticky-note me-2"></i>Observações
                        </h5>
                        <div class="mb-3">
                            <label asp-for="Observacoes" class="form-label"></label>
                            <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="form-check form-switch mb-3">
                            <input asp-for="Ativo" class="form-check-input" checked />
                            <label asp-for="Ativo" class="form-check-label"></label>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Cadastrar Cliente
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



