
@using Fynanceo.Models.Enums
@model Fynanceo.ViewModel.PedidosModel.PedidoViewModel

@{
    ViewData["Title"] = "Delivery - Novo Pedido";
    Layout = "_Layout";
}

<div class="pdv-container">
    <div class="row g-3 h-100">
        <!-- Coluna da Esquerda: Seleção de Produtos -->
        <div class="col-lg-8 col-md-7 d-flex flex-column">
            <!-- Cabeçalho e Busca -->
            <div class="card shadow-sm mb-3 border-0 rounded-3">
                <div class="card-body p-3">
                    <div class="row align-items-center g-2">
                        <div class="col-auto">
                            <h4 class="mb-0 fw-bold text-primary">
                                <i class="fas fa-motorcycle me-2"></i>Delivery
                            </h4>
                        </div>
                        <div class="col">
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 border-light text-muted">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control border-start-0 border-light ps-0 shadow-none" 
                                       id="searchProduto" placeholder="Pesquisar produtos (Nome ou Categoria)...">
                            </div>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <a href="@Url.Action("Index")" class="btn btn-light border-0">
                                <i class="fas fa-times"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Categorias (Scroll Horizontal) -->
            <div class="mb-3">
                <div class="d-flex overflow-auto pb-2 gap-2" id="filtrosCategorias" style="scrollbar-width: none; -ms-overflow-style: none;">
                    <button type="button" class="btn btn-primary px-4 rounded-pill shadow-sm flex-shrink-0" data-categoria="">
                        Todos
                    </button>
                    @foreach (var categoria in Model.CategoriasDisponiveis ?? new List<string>())
                    {
                        <button type="button" class="btn btn-white bg-white border-0 px-4 rounded-pill shadow-sm flex-shrink-0" data-categoria="@categoria">
                            @categoria
                        </button>
                    }
                </div>
            </div>

            <!-- Grid de Produtos -->
            <div class="flex-grow-1 overflow-auto pe-1" id="listaProdutosContainer" style="max-height: calc(100vh - 220px); min-height: 400px;">
                <div class="row g-3" id="listaProdutos">
                    <!-- Carregado via AJAX -->
                </div>

                <!-- Loading -->
                <div id="loadingProdutos" class="text-center py-5" style="display: none;">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="text-muted mt-2">Carregando produtos...</p>
                </div>

                <!-- Sem resultados -->
                <div id="noResults" class="text-center py-5" style="display: none;">
                    <div class="bg-light d-inline-block rounded-circle p-4 mb-3">
                        <i class="fas fa-search fa-3x text-muted"></i>
                    </div>
                    <h5 class="text-muted">Nenhum produto encontrado</h5>
                    <p class="small text-secondary">Tente mudar o termo da busca ou categoria</p>
                </div>
            </div>
        </div>

        <!-- Coluna da Direita: Dados de Entrega e Carrinho -->
        <div class="col-lg-4 col-md-5">
            <div class="card shadow-lg border-0 rounded-3 h-100 d-flex flex-column" style="min-height: calc(100vh - 120px);">
                <div class="card-header bg-white border-bottom py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">Novo Pedido</h5>
                        <button type="button" class="btn btn-sm btn-outline-danger border-0" onclick="limparPedido()">
                            <i class="fas fa-trash-alt me-1"></i>Limpar
                        </button>
                    </div>
                </div>

                <div class="card-body p-0 flex-grow-1 overflow-auto">
                    <!-- Informações de Entrega -->
                    <div class="p-3 bg-light border-bottom">
                        <form asp-action="Delivery" id="pedidoForm">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small"></div>
                            <input type="hidden" asp-for="TipoPedido" value="@((int)TipoPedido.Delivery)" />
                            
                            <div class="mb-3">
                                <label asp-for="ClienteId" class="form-label small fw-bold text-muted mb-1">Cliente *</label>
                                <select asp-for="ClienteId" class="form-select form-select-sm select2" id="clienteSelect" required>
                                    <option value="">Selecione o cliente...</option>
                                    @foreach (var cliente in Model.Clientes ?? new List<Cliente>())
                                    {
                                        <option value="@cliente.Id">@cliente.NomeCompleto</option>
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label asp-for="EnderecoEntregaId" class="form-label small fw-bold text-muted mb-1">Endereço de Entrega *</label>
                                <select asp-for="EnderecoEntregaId" class="form-select form-select-sm" id="enderecoSelect" required>
                                    <option value="">Selecione o cliente primeiro...</option>
                                </select>
                            </div>

                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <label asp-for="TaxaEntrega" class="form-label small fw-bold text-muted mb-1">Taxa de Entrega</label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-white border-end-0">R$</span>
                                        <input asp-for="TaxaEntrega" type="number" step="0.01" class="form-control border-start-0" id="taxaEntregaInput" value="0" />
                                    </div>
                                </div>
                                <div class="col-6 d-flex align-items-end">
                                    <button type="button" class="btn btn-outline-secondary btn-sm w-100" onclick="$('#obsContainer').toggle()">
                                        <i class="fas fa-plus me-1"></i>Observações
                                    </button>
                                </div>
                            </div>

                            <div id="obsContainer" style="display: none;" class="mb-3">
                                <textarea asp-for="Observacoes" class="form-control form-control-sm" rows="2" placeholder="Ponto da carne, troco, etc."></textarea>
                            </div>
                        </form>
                    </div>

                    <!-- Lista de Itens -->
                    <div id="itensPedido">
                        <!-- Mensagem Vazia -->
                        <div class="text-center text-muted py-5" id="emptyMessage">
                            <div class="mb-3">
                                <i class="fas fa-shopping-basket fa-3x opacity-25"></i>
                            </div>
                            <p class="px-4 small">Selecione produtos à esquerda para adicionar ao pedido</p>
                        </div>
                        
                        <div id="listaItensCarrinho" class="list-group list-group-flush">
                            <!-- Itens dinâmicos aqui -->
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white border-top p-3">
                    <div class="d-flex justify-content-between mb-1 small text-muted">
                        <span>Subtotal Itens</span>
                        <span id="subtotal">R$ 0,00</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2 small text-muted">
                        <span>Taxa de Entrega</span>
                        <span id="taxaResumo">R$ 0,00</span>
                    </div>
                    <div class="d-flex justify-content-between h4 mb-3 fw-bold text-dark">
                        <span>Total</span>
                        <span class="text-success" id="totalPedido">R$ 0,00</span>
                    </div>
                    <button type="submit" form="pedidoForm" class="btn btn-primary btn-lg w-100 fw-bold py-3 shadow-sm">
                        <i class="fas fa-motorcycle me-2"></i>ENVIAR PEDIDO
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Quantidade/Detalhes -->
<div class="modal fade" id="quantidadeModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="quantidadeModalTitle">Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="produtoSelecionadoId">
                <input type="hidden" id="produtoSelecionadoNome">
                <input type="hidden" id="produtoSelecionadoPreco">

                <div class="mb-4 text-center">
                    <label class="form-label small fw-bold text-muted text-uppercase mb-2">Quantidade</label>
                    <div class="input-group input-group-lg">
                        <button class="btn btn-light border" type="button" onclick="alterarQtd(-1)">
                            <i class="fas fa-minus"></i>
                        </button>
                        <input type="number" class="form-control text-center fw-bold border-light bg-light" 
                               id="quantidadeProduto" value="1" min="1" step="1">
                        <button class="btn btn-light border" type="button" onclick="alterarQtd(1)">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>

                <div class="mb-2">
                    <label class="form-label small fw-bold text-muted text-uppercase mb-1">Observações do Item</label>
                    <textarea class="form-control border-light bg-light" id="observacoesProduto" rows="2" placeholder="Ex: Sem cebola, gelo extra..."></textarea>
                </div>
                <div class="mb-2">
                    <label class="form-label small fw-bold text-muted text-uppercase mb-1">Personalizações</label>
                    <textarea class="form-control border-light bg-light" id="personalizacoesProduto" rows="2" placeholder="Ex: Borda de catupiry..."></textarea>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-primary w-100 fw-bold py-2" onclick="adicionarItemPedido()">
                    ADICIONAR AO PEDIDO
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let itensPedido = [];
        let currentProduto = null;
        let currentPage = 1;
        const pageSize = 20;
        let isLoading = false;
        let hasMore = true;
        let currentSearch = '';
        let currentCategoria = '';

        $(document).ready(function() {
            carregarProdutos(1);

            // Select2 para Clientes
            if ($.fn.select2) {
                $('#clienteSelect').select2({
                    theme: 'bootstrap-5',
                    width: '100%'
                });
            }

            @if (Model.Itens != null && Model.Itens.Any())
            {
                foreach (var item in Model.Itens)
                {
                    <text>
                    itensPedido.push({
                        produtoId: @item.ProdutoId,
                        produtoNome: "@item.ProdutoNome",
                        precoUnitario: @item.PrecoUnitario.ToString().Replace(",", "."),
                        quantidade: @item.Quantidade.ToString().Replace(",", "."),
                        observacoes: "@(item.Observacoes ?? "")",
                        personalizacoes: "@(item.Personalizacoes ?? "")",
                        total: @((item.Quantidade * item.PrecoUnitario).ToString().Replace(",", "."))
                    });
                    </text>
                }
                <text>atualizarListaItens();</text>
            }
        });

        function carregarProdutos(page = 1, search = '', categoria = '') {
            if (isLoading) return;
            isLoading = true;
            $('#loadingProdutos').show();
            $('#noResults').hide();

            if (page === 1) $('#listaProdutos').empty();

            $.get('/Pedidos/GetProdutosPaginados', {
                page: page,
                pageSize: pageSize,
                search: search,
                categoria: categoria
            }, function(data) {
                if (data && data.produtos && data.produtos.length > 0) {
                    data.produtos.forEach(produto => {
                        const nomeEsc = (produto.nome || '').replace(/'/g, "\\'");
                        const produtoHtml = `
                            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                                <div class="card h-100 border-0 shadow-sm product-card" onclick="selecionarProduto(${produto.id}, '${nomeEsc}', ${parseFloat(produto.valorVenda)})">
                                    <div class="card-body p-3">
                                        <div class="category-badge">${produto.categoria || 'Geral'}</div>
                                        <h6 class="card-title fw-bold mb-1 text-truncate" title="${produto.nome}">${produto.nome}</h6>
                                        <div class="d-flex justify-content-between align-items-center mt-2">
                                            <span class="text-success fw-bold">R$ ${parseFloat(produto.valorVenda).toLocaleString('pt-BR', {minimumFractionDigits: 2})}</span>
                                            <span class="btn btn-sm btn-primary rounded-circle"><i class="fas fa-plus"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;
                        $('#listaProdutos').append(produtoHtml);
                    });
                    hasMore = page < data.totalPages;
                } else {
                    if (page === 1) $('#noResults').show();
                    hasMore = false;
                }
                currentPage = page;
                isLoading = false;
                $('#loadingProdutos').hide();
            }).fail(function() {
                isLoading = false;
                $('#loadingProdutos').hide();
            });
        }

        function selecionarProduto(id, nome, preco) {
            currentProduto = { id, nome, preco };
            $('#produtoSelecionadoId').val(id);
            $('#produtoSelecionadoNome').val(nome);
            $('#produtoSelecionadoPreco').val(preco);
            $('#quantidadeModalTitle').text(nome);
            $('#quantidadeProduto').val(1);
            $('#observacoesProduto').val('');
            $('#personalizacoesProduto').val('');
            $('#quantidadeModal').modal('show');
        }

        function alterarQtd(val) {
            let input = $('#quantidadeProduto');
            let current = parseInt(input.val()) || 1;
            input.val(Math.max(1, current + val));
        }

        function adicionarItemPedido() {
            const quantidade = parseFloat($('#quantidadeProduto').val());
            if (quantidade <= 0) return;
            
            const precoUnitario = parseFloat($('#produtoSelecionadoPreco').val());
            const item = {
                produtoId: $('#produtoSelecionadoId').val(),
                produtoNome: $('#produtoSelecionadoNome').val(),
                precoUnitario: precoUnitario,
                quantidade: quantidade,
                observacoes: $('#observacoesProduto').val(),
                personalizacoes: $('#personalizacoesProduto').val(),
                total: quantidade * precoUnitario
            };
            
            itensPedido.push(item);
            atualizarListaItens();
            $('#quantidadeModal').modal('hide');
        }

        function atualizarListaItens() {
            const container = $('#listaItensCarrinho');
            const emptyMessage = $('#emptyMessage');
            
            container.empty();
            
            if (itensPedido.length === 0) {
                emptyMessage.show();
                atualizarResumo();
                return;
            }
            
            emptyMessage.hide();
            
            itensPedido.forEach((item, index) => {
                container.append(`
                    <div class="list-group-item border-start-0 border-end-0 border-light py-3 px-3">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center mb-1">
                                    <span class="badge bg-light text-dark border me-2">${item.quantidade}x</span>
                                    <h6 class="mb-0 fw-bold">${item.produtoNome}</h6>
                                </div>
                                ${item.observacoes ? `<small class="text-muted d-block ps-4"><i class="fas fa-comment-alt me-1"></i>${item.observacoes}</small>` : ''}
                                ${item.personalizacoes ? `<small class="text-info d-block ps-4"><i class="fas fa-plus-circle me-1"></i>${item.personalizacoes}</small>` : ''}
                            </div>
                            <div class="text-end ms-2">
                                <span class="d-block fw-bold text-dark">R$ ${item.total.toLocaleString('pt-BR', {minimumFractionDigits: 2})}</span>
                                <button type="button" class="btn btn-link btn-sm text-danger p-0 text-decoration-none" onclick="removerItem(${index})">
                                    <i class="fas fa-times me-1"></i>Remover
                                </button>
                            </div>
                        </div>
                    </div>
                `);
            });
            atualizarResumo();
        }

        function removerItem(index) {
            itensPedido.splice(index, 1);
            atualizarListaItens();
        }

        function atualizarResumo() {
            const subtotal = itensPedido.reduce((sum, i) => sum + i.total, 0);
            const taxa = parseFloat($('#taxaEntregaInput').val()) || 0;
            const total = subtotal + taxa;
            
            $('#subtotal').text(`R$ ${subtotal.toLocaleString('pt-BR', {minimumFractionDigits: 2})}`);
            $('#taxaResumo').text(`R$ ${taxa.toLocaleString('pt-BR', {minimumFractionDigits: 2})}`);
            $('#totalPedido').text(`R$ ${total.toLocaleString('pt-BR', {minimumFractionDigits: 2})}`);
        }

        $('#taxaEntregaInput').on('input', atualizarResumo);

        function limparPedido() {
            if (itensPedido.length === 0 && !$('#clienteSelect').val()) return;
            if (!confirm('Deseja realmente limpar os dados do pedido?')) return;
            itensPedido = [];
            atualizarListaItens();
            $('#pedidoForm')[0].reset();
            if ($.fn.select2) $('#clienteSelect').val(null).trigger('change');
            $('#enderecoSelect').empty().append('<option value="">Selecione o cliente primeiro...</option>');
            $('#obsContainer').hide();
        }

        $('#clienteSelect').change(function() {
            const clienteId = $(this).val();
            const select = $('#enderecoSelect');
            if (!clienteId) {
                select.empty().append('<option value="">Selecione o cliente primeiro...</option>');
                return;
            }
            $.get('/Pedidos/GetEnderecosCliente?clienteId=' + clienteId, function(data) {
                select.empty().append('<option value="">Selecione o endereço...</option>');
                data.forEach(e => select.append(`<option value="${e.id}">${e.enderecoCompleto}</option>`));
            });
        });

        $('#pedidoForm').submit(function(e) {
            if (itensPedido.length === 0) {
                e.preventDefault();
                alert('O pedido está vazio. Adicione produtos antes de enviar.');
                return;
            }
            
            $(this).find('input[type="hidden"][name^="Itens"]').remove();
            itensPedido.forEach((item, index) => {
                $(this).append(`
                    <input type="hidden" name="Itens[${index}].ProdutoId" value="${item.produtoId}">
                    <input type="hidden" name="Itens[${index}].ProdutoNome" value="${item.produtoNome}">
                    <input type="hidden" name="Itens[${index}].Quantidade" value="${item.quantidade.toString().replace(".", ",")}">
                    <input type="hidden" name="Itens[${index}].PrecoUnitario" value="${item.precoUnitario.toString().replace(".", ",")}">
                    <input type="hidden" name="Itens[${index}].Observacoes" value="${item.observacoes || ''}">
                    <input type="hidden" name="Itens[${index}].Personalizacoes" value="${item.personalizacoes || ''}">
                `);
            });
        });

        // Eventos de Busca e Filtro
        let searchTimeout;
        $('#searchProduto').on('input', function() {
            clearTimeout(searchTimeout);
            const termo = $(this).val().trim();
            searchTimeout = setTimeout(() => {
                currentSearch = termo;
                carregarProdutos(1, currentSearch, currentCategoria);
            }, 400);
        });

        $('#filtrosCategorias').on('click', 'button', function() {
            $('#filtrosCategorias button').removeClass('btn-primary').addClass('btn-white bg-white border-0');
            $(this).removeClass('btn-white bg-white border-0').addClass('btn-primary');
            currentCategoria = $(this).data('categoria') || '';
            carregarProdutos(1, currentSearch, currentCategoria);
        });

        // Scroll infinito
        $('#listaProdutosContainer').on('scroll', function() {
            if (this.scrollTop + this.clientHeight >= this.scrollHeight - 50) {
                if (hasMore && !isLoading) carregarProdutos(currentPage + 1, currentSearch, currentCategoria);
            }
        });
    </script>
    
    <style>
        body { background-color: #f8f9fa; }
        .pdv-container { padding: 10px; height: calc(100vh - 100px); }
        
        .product-card {
            cursor: pointer;
            transition: all 0.2s ease-in-out;
            border-radius: 12px;
            background-color: #fff;
        }
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.08) !important;
        }
        .product-card .category-badge {
            font-size: 0.65rem;
            text-transform: uppercase;
            color: #6c757d;
            font-weight: 700;
            margin-bottom: 5px;
        }
        
        .btn-white { background: #fff; color: #444; }
        
        #filtrosCategorias::-webkit-scrollbar { display: none; }
        
        #listaItensCarrinho .list-group-item:hover {
            background-color: #fdfdfd;
        }
        
        .form-select, .form-control {
            border-radius: 8px;
        }
        
        /* Ajuste para Select2 no tema bootstrap-5 */
        .select2-container--bootstrap-5 .select2-selection {
            border-radius: 8px;
            border-color: #dee2e6;
        }

        @@media (max-width: 768px) {
            .pdv-container { padding: 5px; height: auto; }
            #listaProdutosContainer { max-height: none !important; }
        }
    </style>
}
