<!-- Views/Pedidos/FecharComPagamento.cshtml -->
@model Fynanceo.ViewModel.PedidosModel.FechamentoPedidoViewModel

@{ 
    ViewData["Title"] = "Fechar Pedido com Pagamento";
}

@await Html.PartialAsync("_AlertasPartial")

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="fas fa-cash-register me-2"></i>@ViewData["Title"]
                </h5>
            </div>
            <div class="card-body">
                <!-- Informações do Pedido -->
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0"><i class="fas fa-receipt me-2"></i>Informações do Pedido</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <strong>Número:</strong> @Model.NumeroPedido<br>
                                <strong>Tipo:</strong> @Model.TipoPedido
                            </div>
                            <div class="col-6">
                                @if (!string.IsNullOrEmpty(Model.ClienteNome))
                                {
                                    <strong>Cliente:</strong> @Model.ClienteNome<br>
                                }
                                @if (!string.IsNullOrEmpty(Model.MesaNumero))
                                {
                                    <strong>Mesa:</strong> @Model.MesaNumero
                                }
                            </div>
                        </div>
                        <div class="text-center mt-2">
                            <h4 class="text-success mb-0">Total: R$ @Model.TotalPedido.ToString("N2")</h4>
                        </div>
                    </div>
                </div>

                <form asp-action="FecharComPagamento">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="PedidoId" />
                    <input type="hidden" asp-for="TotalPedido" />
                    <input type="hidden" asp-for="NumeroPedido" />

                    <div class="mb-3">
                        <label asp-for="FormaPagamento" class="form-label">Forma de Pagamento *</label>
                        <select asp-for="FormaPagamento" class="form-select" id="formaPagamentoSelect" required>
                            <option value="">Selecione...</option>
                            <option value="1">Dinheiro</option>
                            <option value="2">Cartão Crédito</option>
                            <option value="3">Cartão Débito</option>
                            <option value="4">PIX</option>
                            <option value="5">Vale Refeição</option>
                            <option value="6">Vale Alimentação</option>
                            <option value="7">Outros</option>
                        </select>
                        <span asp-validation-for="FormaPagamento" class="text-danger"></span>
                    </div>

                    <!-- Campo valor recebido (apenas para dinheiro) -->
                    <div class="mb-3" id="valorRecebidoGroup" style="display: none;">
                        <label asp-for="ValorRecebido" class="form-label">Valor Recebido *</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="ValorRecebido" class="form-control" type="text" step="0.01" min="0.01" data-mask="moeda" >
                        </div>
                        <span asp-validation-for="ValorRecebido" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Informe o valor em dinheiro recebido do cliente.
                        </small>
                    </div>

                    <!-- Campo de troco (apenas para dinheiro) -->
                    <div class="mb-3" id="trocoGroup" style="display: none;">
                        <label class="form-label">Troco</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input id="TrocoDisplay" class="form-control" type="text" value="0,00" readonly>
                        </div>
                        <small class="form-text text-muted">O troco é calculado automaticamente quando o valor recebido é maior que o total.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label">Observações</label>
                        <textarea asp-for="Observacoes" class="form-control" rows="3" 
                                  placeholder="Observações sobre o pagamento..."></textarea>
                        <span asp-validation-for="Observacoes" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-check me-2"></i>Confirmar Fechamento
                        </button>
                        <a href="@Url.Action("Details", new { id = Model.PedidoId })" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const formaPagamentoSelect = document.getElementById('formaPagamentoSelect');
            const valorRecebidoGroup = document.getElementById('valorRecebidoGroup');
            const trocoGroup = document.getElementById('trocoGroup');
            const trocoDisplay = document.getElementById('TrocoDisplay');
            const valorRecebidoInput = document.getElementById('ValorRecebido');
            const totalPedido = parseFloat('@Model.TotalPedido.ToString(System.Globalization.CultureInfo.InvariantCulture)');

            function formatarMoeda(valor) {
                return Number(valor).toLocaleString('pt-BR', {
                    minimumFractionDigits: 2,
                    maximumFractionDigits: 2
                });
            }

            function calcularTroco() {
                // Normaliza entrada no formato pt-BR (ex.: "5.658,66") para número JS
                // 1) remove símbolos e espaços, 2) remove separador de milhar '.', 3) troca vírgula decimal por ponto
                let entrada = (valorRecebidoInput.value || '').toString().trim();
                entrada = entrada.replace(/[^\d,.-]/g, ''); // mantém apenas dígitos e separadores
                entrada = entrada.replace(/\./g, '');       // remove todos os pontos (milhar)
                entrada = entrada.replace(',', '.');        // converte vírgula decimal para ponto

                const valorRecebido = parseFloat(entrada) || 0;
                const troco = valorRecebido - totalPedido;
                const valorMostrar = troco > 0 ? troco : 0;
                trocoDisplay.value = formatarMoeda(valorMostrar);
            }

            function aplicarExibicaoPorForma() {
                const formaPagamento = formaPagamentoSelect.value;
                if (formaPagamento === '1') { // Dinheiro
                    valorRecebidoGroup.style.display = '';
                    trocoGroup.style.display = '';
                    valorRecebidoInput.required = true;
                    valorRecebidoInput.focus();
                    calcularTroco();
                } else {
                    valorRecebidoGroup.style.display = 'none';
                    trocoGroup.style.display = 'none';
                    valorRecebidoInput.required = false;
                    valorRecebidoInput.value = '';
                    trocoDisplay.value = '0,00';
                }
            }

            formaPagamentoSelect.addEventListener('change', aplicarExibicaoPorForma);
            valorRecebidoInput.addEventListener('input', calcularTroco);

            // Inicializa estado correto ao carregar a página
            aplicarExibicaoPorForma();
        });
    </script>
}