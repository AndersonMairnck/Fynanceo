<!-- Views/Fornecedores/Index.cshtml -->
@model IEnumerable<Fynanceo.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="fas fa-truck text-primary me-2"></i>@ViewData["Title"]
    </h1>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Novo Fornecedor
    </a>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h4 class="mb-0">@Model.Count(f => f.Ativo)</h4>
                <small>Ativos</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-secondary text-white">
            <div class="card-body text-center">
                <h4 class="mb-0">@Model.Count(f => !f.Ativo)</h4>
                <small>Inativos</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h4 class="mb-0">@Model.Count()</h4>
                <small>Total</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body text-center">
                <h4 class="mb-0">
                    @{
                        var totalContas = Model.Sum(f => f.Contas?.Count ?? 0);
                    }
                    @totalContas
                </h4>
                <small>Contas Vinculadas</small>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Todos os Fornecedores</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Documento</th>
                        <th>Contato</th>
                        <th>Telefone</th>
                        <th>Email</th>
                        <th>Contas</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fornecedor in Model)
                    {
                        <tr>
                            <td>
                                <strong>@fornecedor.Nome</strong>
                                @if (!string.IsNullOrEmpty(fornecedor.Contato))
                                {
                                    <br>
                                    <small class="text-muted">@fornecedor.Contato</small>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(fornecedor.Documento))
                                {
                                    <text>@fornecedor.Documento</text>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(fornecedor.Contato))
                                {
                                    <text>@fornecedor.Contato</text>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(fornecedor.Telefone))
                                {
                                    <text>@fornecedor.Telefone</text>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(fornecedor.Email))
                                {
                                    <text>@fornecedor.Email</text>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-primary">@(fornecedor.Contas?.Count ?? 0)</span>
                            </td>
                            <td>
                                @if (fornecedor.Ativo)
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inativo</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("Details", new { id = fornecedor.Id })"
                                       class="btn btn-outline-primary" title="Detalhes">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", new { id = fornecedor.Id })"
                                       class="btn btn-outline-secondary" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn btn-outline-danger"
                                            title="Excluir"
                                            onclick="excluirFornecedor(@fornecedor.Id, '@fornecedor.Nome')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center text-muted py-5">
        <i class="fas fa-truck fa-3x mb-3"></i>
        <h5>Nenhum fornecedor cadastrado</h5>
        <p class="mb-0">Comece cadastrando seu primeiro fornecedor.</p>
        <a href="@Url.Action("Create")" class="btn btn-primary mt-3">
            <i class="fas fa-plus me-2"></i>Cadastrar Fornecedor
        </a>
    </div>
}

<!-- Modal de Confirmação -->
<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir o fornecedor <strong id="fornecedorNome"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Esta ação não pode ser desfeita!
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Excluir</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let fornecedorIdParaExcluir = null;

        function excluirFornecedor(id, nome) {
            fornecedorIdParaExcluir = id;
            $('#fornecedorNome').text(nome);
            $('#confirmModal').modal('show');
        }

        $('#confirmDelete').click(async function() {
            if (!fornecedorIdParaExcluir) return;

            const response = await fetch(`@Url.Action("Delete", "Fornecedores")?id=${fornecedorIdParaExcluir}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            });

            const result = await response.json();

            if (result.success) {
                $('#confirmModal').modal('hide');
                location.reload();
            } else {
                alert('Erro: ' + result.message);
                $('#confirmModal').modal('hide');
            }
        });
    </script>
}