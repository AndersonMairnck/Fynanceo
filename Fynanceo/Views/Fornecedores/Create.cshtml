<!-- Views/Fornecedores/Create.cshtml -->
@model Fynanceo.ViewModel.FornecedorModel.FornecerdorViewModel
@using Fynanceo.Models.Enums

@{
    ViewData["Title"] = "Novo Fornecedor";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="fas fa-plus-circle text-primary me-2"></i>@ViewData["Title"]
    </h1>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Voltar
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Informações do Fornecedor</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Nome" class="form-label">Nome/Razão Social *</label>
                                <input asp-for="Nome" class="form-control" placeholder="Nome completo ou razão social" data-maiuscula="titulo">
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CpfCnpj" class="form-label"></label>
                                <input asp-for="CpfCnpj" class="form-control" data-mask="cpfcnpj" />
                                <span asp-validation-for="CpfCnpj" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Telefone" class="form-label">Telefone</label>
                                <input asp-for="Telefone" class="form-control" placeholder="(11) 99999-9999" data-mask="telefone"  >
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="email@exemplo.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Endereco" class="form-label">Endereço</label>
                        <input asp-for="Endereco" class="form-control" placeholder="Endereço completo" data-maiuscula="titulo">
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Contato" class="form-label">Pessoa de Contato</label>
                                <input asp-for="Contato" class="form-control" placeholder="Nome do contato principal" data-maiuscula="titulo">
                                <span asp-validation-for="Contato" class="text-danger"></span>
                            </div>
                        </div>
                        @* <div class="col-md-6"> *@
                        @*     <div class="mb-3"> *@
                        @*         <label asp-for="Status" class="form-label">Status</label> *@
                        @*         <div class="form-check form-switch mt-2"> *@
                        @*             <input asp-for=Status. class="form-check-input" checked> *@
                        @*             <label asp-for="Status" class="form-check-label">Fornecedor ativo</label> *@
                        @*         </div> *@
                        @*     </div> *@
                        @* </div> *@
                    </div>

                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label">Observações</label>
                        <textarea asp-for="Observacoes" class="form-control" rows="3" placeholder="Observações sobre o fornecedor..."></textarea>
                        <span asp-validation-for="Observacoes" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-check me-2"></i>Cadastrar Fornecedor
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

