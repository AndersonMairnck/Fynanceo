@model Fynanceo.ViewModel.IdentityModel.RegistrarViewModel
@{
    ViewData["Title"] = "Cadastrar Usuário";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1"><i class="fas fa-user-plus me-2"></i>Cadastrar Novo Usuário</h2>
                    <p class="text-muted">Preencha os dados do novo usuário do sistema</p>
                </div>
                <a asp-action="ListarUsuarios" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Voltar para Lista
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i>Informações do Usuário</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Registrar" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="NomeCompleto" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="NomeCompleto" class="form-control" placeholder="Ex: João da Silva" />
                                </div>
                                <span asp-validation-for="NomeCompleto" class="text-danger small"></span>
                            </div>

                            <div class="col-md-8 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="usuario@exemplo.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Cargo" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
                                    <input asp-for="Cargo" class="form-control" placeholder="Ex: Gerente" />
                                </div>
                                <span asp-validation-for="Cargo" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="PerfilSelecionado" class="form-label">Perfil de Acesso</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-shield-alt"></i></span>
                                    <select asp-for="PerfilSelecionado" class="form-select" asp-items="@ViewBag.Perfis">
                                        <option value="">Selecione um perfil...</option>
                                    </select>
                                </div>
                                <small class="text-muted">Define as permissões de acesso do usuário no sistema</small>
                            </div>

                            <div class="col-12 mb-2">
                                <hr />
                                <h6 class="text-muted"><i class="fas fa-lock me-2"></i>Senha de Acesso</h6>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Senha" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    <input asp-for="Senha" class="form-control" placeholder="••••••••" />
                                </div>
                                <span asp-validation-for="Senha" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmarSenha" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    <input asp-for="ConfirmarSenha" class="form-control" placeholder="••••••••" />
                                </div>
                                <span asp-validation-for="ConfirmarSenha" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="alert alert-info d-flex align-items-start">
                            <i class="fas fa-info-circle me-2 mt-1"></i>
                            <div>
                                <strong>Requisitos de Senha:</strong>
                                <ul class="mb-0 mt-2 small">
                                    <li>Mínimo de 8 caracteres</li>
                                    <li>Pelo menos 1 letra maiúscula (A-Z)</li>
                                    <li>Pelo menos 1 letra minúscula (a-z)</li>
                                    <li>Pelo menos 1 número (0-9)</li>
                                    <li>Pelo menos 1 caractere especial (@@, #, $, %, etc)</li>
                                </ul>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="ListarUsuarios" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Cadastrar Usuário
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-xl-6">
            <div class="card shadow-sm bg-light">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Perfis de Acesso</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="text-primary"><i class="fas fa-crown me-2"></i>Administrador</h6>
                        <p class="small text-muted mb-0">Acesso total ao sistema, incluindo configurações e gerenciamento de usuários.</p>
                    </div>
                    <hr />
                    <div class="mb-3">
                        <h6 class="text-success"><i class="fas fa-user-tie me-2"></i>Gerente</h6>
                        <p class="small text-muted mb-0">Gerencia operações, produtos, estoque e visualiza relatórios financeiros.</p>
                    </div>
                    <hr />
                    <div class="mb-3">
                        <h6 class="text-info"><i class="fas fa-cash-register me-2"></i>Caixa</h6>
                        <p class="small text-muted mb-0">Realiza vendas, recebe pagamentos e fecha caixa.</p>
                    </div>
                    <hr />
                    <div class="mb-3">
                        <h6 class="text-warning"><i class="fas fa-utensils me-2"></i>Cozinha</h6>
                        <p class="small text-muted mb-0">Visualiza pedidos e atualiza status de preparação.</p>
                    </div>
                    <hr />
                    <div class="mb-3">
                        <h6 class="text-danger"><i class="fas fa-motorcycle me-2"></i>Entregador</h6>
                        <p class="small text-muted mb-0">Acessa entregas pendentes e atualiza status de entrega.</p>
                    </div>
                    <hr />
                    <div class="mb-0">
                        <h6 class="text-secondary"><i class="fas fa-concierge-bell me-2"></i>Atendente</h6>
                        <p class="small text-muted mb-0">Registra pedidos, gerencia mesas e atende clientes.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}