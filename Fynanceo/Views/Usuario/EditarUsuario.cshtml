@model Fynanceo.Models.UsuarioAplicacao
@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1"><i class="fas fa-user-edit me-2"></i>Editar Usuário</h2>
                    <p class="text-muted">Atualize as informações do usuário @Model.NomeCompleto</p>
                </div>
                <a asp-action="ListarUsuarios" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Voltar para Lista
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i>Informações do Usuário</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditarUsuario" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="UserName" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="NomeCompleto" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="NomeCompleto" class="form-control" />
                                </div>
                                <span asp-validation-for="NomeCompleto" class="text-danger small"></span>
                            </div>

                            <div class="col-md-8 mb-3">
                                <label class="form-label">E-mail</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input type="text" class="form-control" value="@Model.Email" disabled />
                                </div>
                                <small class="text-muted">O e-mail não pode ser alterado</small>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Cargo" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
                                    <input asp-for="Cargo" class="form-control" placeholder="Ex: Gerente" />
                                </div>
                            </div>

                            <div class="col-md-8 mb-3">
                                <label class="form-label">Perfil de Acesso</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-shield-alt"></i></span>
                                    <select name="perfilSelecionado" class="form-select" asp-items="@ViewBag.Perfis">
                                        <option value="">Selecione um perfil...</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Ativo" class="form-label">Status</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-toggle-on"></i>
                                    </span>
                                    <select asp-for="Ativo" class="form-select">
                                        <option value="true">Ativo</option>
                                        <option value="false">Inativo</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-12 mb-3">
                                <div class="alert alert-warning d-flex align-items-center">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <div>
                                        <strong>Atenção:</strong> Alterar o perfil ou status do usuário afetará suas permissões de acesso ao sistema.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="ListarUsuarios" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm bg-light">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informações do Usuário</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small">Data de Cadastro</label>
                        <p class="mb-0"><strong>@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</strong></p>
                    </div>
                    <hr />
                    <div class="mb-3">
                        <label class="text-muted small">ID do Usuário</label>
                        <p class="mb-0 font-monospace small">@Model.Id</p>
                    </div>
                    <hr />
                    <div class="mb-0">
                        <label class="text-muted small">Status Atual</label>
                        <p class="mb-0">
                            @if (Model.Ativo)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle me-1"></i>Ativo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fas fa-ban me-1"></i>Inativo
                                </span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm bg-light mt-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-key me-2"></i>Alterar Senha</h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-2">
                        Para redefinir a senha deste usuário, peça para ele usar a funcionalidade "Alterar Senha" após fazer login.
                    </p>
                    <p class="small text-muted mb-0">
                        <strong>Nota:</strong> Por segurança, apenas o próprio usuário pode alterar sua senha.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}