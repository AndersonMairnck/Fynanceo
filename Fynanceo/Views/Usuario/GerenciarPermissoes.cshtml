@{
    ViewData["Title"] = "Gerenciar Permissões";
    var usuario = ViewBag.Usuario as Fynanceo.Models.UsuarioAplicacao;
    var permissoesAtuais = ViewBag.PermissoesAtuais as List<string>;
    var todasPermissoes = ViewBag.TodasPermissoes as Dictionary<string, List<string>>;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1"><i class="fas fa-shield-alt me-2"></i>Gerenciar Permissões</h2>
                    <p class="text-muted">Defina permissões específicas para @usuario.NomeCompleto</p>
                </div>
                <a asp-action="ListarUsuarios" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Voltar
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-lock me-2"></i>Selecione as Permissões</h5>
                </div>
                <div class="card-body">
                    <form asp-action="GerenciarPermissoes" method="post">
                        <input type="hidden" name="id" value="@usuario.Id" />

                        @foreach (var categoria in todasPermissoes)
                        {
                            <div class="mb-4">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-folder me-2"></i>@categoria.Key
                                </h6>
                                <div class="row">
                                    @foreach (var permissao in categoria.Value)
                                    {
                                        var isChecked = permissoesAtuais.Contains(permissao);
                                        var permissaoNome = permissao.Split('.').Last();
                                        
                                        <div class="col-md-6 mb-2">
                                            <div class="form-check">
                                                <input class="form-check-input" 
                                                       type="checkbox" 
                                                       name="permissoesSelecionadas" 
                                                       value="@permissao"
                                                       id="@permissao"
                                                       @(isChecked ? "checked" : "")>
                                                <label class="form-check-label" for="@permissao">
                                                    @permissaoNome
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <hr />
                            </div>
                        }

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="ListarUsuarios" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Salvar Permissões
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm bg-light">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informações</h6>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Usuário:</strong> @usuario.NomeCompleto</p>
                    <p class="mb-2"><strong>E-mail:</strong> @usuario.Email</p>
                    <p class="mb-0"><strong>Cargo:</strong> @(usuario.Cargo ?? "N/A")</p>
                    <hr />
                    <small class="text-muted">
                        <i class="fas fa-lightbulb me-1"></i>
                        Permissões específicas permitem controle granular sobre cada funcionalidade do sistema.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>