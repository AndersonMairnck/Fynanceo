@model IEnumerable<Fynanceo.Models.MovimentacaoEstoque>
@using Fynanceo.Helpers
@using Fynanceo.Models.Enums
@{
    ViewData["Title"] = "Movimentações de Estoque";
    ViewData["ActivePage"] = "estoque-movimentacoes";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-exchange-alt me-2"></i>Movimentações de Estoque
        </h1>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-outline-primary me-2">
                <i class="fas fa-box me-2"></i>Produtos
            </a>
            <a href="@Url.Action("NovaMovimentacao")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nova Movimentação
            </a>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="dataInicio" class="form-label">Data Início</label>
                    <input type="date" class="form-control" id="dataInicio" name="dataInicio" 
                           value="@ViewBag.DataInicio">
                </div>
                <div class="col-md-3">
                    <label for="dataFim" class="form-label">Data Fim</label>
                    <input type="date" class="form-control" id="dataFim" name="dataFim" 
                           value="@ViewBag.DataFim">
                </div>
                <div class="col-md-3">
                    <label for="produtoId" class="form-label">Produto</label>
                    <select class="form-select" id="produtoId" name="produtoId">
                        <option value="">Todos os produtos</option>
                        @foreach (var produto in ViewBag.Produtos as List<Fynanceo.Models.Estoque>)
                        {
                            if (ViewBag.ProdutoId?.ToString() == produto.Id.ToString())
                            {
                                <option value="@produto.Id" selected>
                                    @produto.Nome
                                </option>
                            }
                            else
                            {
                                <option value="@produto.Id">
                                    @produto.Nome
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid gap-2 d-md-flex">
                        <button type="submit" class="btn btn-primary flex-fill">
                            <i class="fas fa-filter me-2"></i>Filtrar
                        </button>
                        <a href="@Url.Action("Movimentacoes")" class="btn btn-outline-secondary">
                            <i class="fas fa-redo me-2"></i>Limpar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Resumo -->
    <div class="row mb-4">
        <div class="col-xl-2 col-md-4 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Entradas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(m => m.Tipo == TipoMovimentacaoEstoque.Entrada)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-down fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-md-4 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Saídas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(m => m.Tipo == TipoMovimentacaoEstoque.Saida)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-up fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-md-4 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Ajustes
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(m => m.Tipo == TipoMovimentacaoEstoque.Ajuste)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-adjust fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Valor Total Entradas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(Model
                                    .Where(m => m.Tipo == TipoMovimentacaoEstoque.Entrada)
                                    .Sum(m => m.CustoTotal)
                                    .ToString("C"))
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-dark shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">
                                Total Movimentações
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela de Movimentações -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Histórico de Movimentações</h6>
            <div>
                <a href="@Url.Action("ExportarMovimentacoes", new { 
                    dataInicio = ViewBag.DataInicio, 
                    dataFim = ViewBag.DataFim, 
                    produtoId = ViewBag.ProdutoId 
                })" class="btn btn-sm btn-success">
                    <i class="fas fa-file-excel me-2"></i>Exportar
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Data/Hora</th>
                            <th>Produto</th>
                            <th>Tipo</th>
                            <th>Quantidade</th>
                            <th>Custo Unit.</th>
                            <th>Valor Total</th>
                            <th>Documento</th>
                            <th>Fornecedor</th>
                            <th>Pedido</th>
                            <th>Observações</th>
                            <th>Usuário</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DataMovimentacao.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <strong>@item.Estoque.Nome</strong>
                                    <br><small class="text-muted">@item.Estoque.Codigo</small>
                                </td>
                                <td>
                                    <span class="badge @GetTipoMovimentacaoBadgeClass(item.Tipo)">
                                        @item.Tipo
                                    </span>
                                </td>
                                <td>
                                    <span class="@(item.Tipo == TipoMovimentacaoEstoque.Entrada ? "text-success" : "text-danger")">
                                        @if (item.Tipo == TipoMovimentacaoEstoque.Entrada)
                                        {
                                            <i class="fas fa-arrow-down me-1"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-arrow-up me-1"></i>
                                        }
                                        @item.Quantidade.ToString("N2") @item.Estoque.UnidadeMedida
                                    </span>
                                </td>
                                <td>@item.CustoUnitario.ToString("C")</td>
                                <td>
                                    <strong>@item.CustoTotal.ToString("C")</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Documento))
                                    {
                                        <span class="badge bg-secondary">@item.Documento</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Fornecedor != null)
                                    {
                                        <small>@item.Fornecedor.Nome</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.PedidoId.HasValue)
                                    {
                                        <a href="@Url.Action("Details", "Pedidos", new { id = item.PedidoId })" 
                                           class="badge bg-info text-decoration-none">
                                            #@item.PedidoId
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Observacao))
                                    {
                                           <small title="@item.Observacao">@item.Observacao.Truncate(30)</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@item.Usuario</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json'
                },
                order: [[0, 'desc']],
                pageLength: 50,
                responsive: true,
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rtip'
            });

            // Set max date for date filters to today
            const today = new Date().toISOString().split('T')[0];
            $('#dataFim').attr('max', today);
            $('#dataInicio').attr('max', today);
        });
    </script>
}

@functions {
    public string GetTipoMovimentacaoBadgeClass(TipoMovimentacaoEstoque tipo)
    {
        return tipo switch
        {
            TipoMovimentacaoEstoque.Entrada => "bg-success",
            TipoMovimentacaoEstoque.Saida => "bg-danger",
            TipoMovimentacaoEstoque.Ajuste => "bg-warning text-dark",
            TipoMovimentacaoEstoque.Perda => "bg-dark",
            TipoMovimentacaoEstoque.Transferencia => "bg-info",
            _ => "bg-secondary"
        };
    }
}

<!-- Helper extension for string truncation -->
@using System
@using System.Linq

