@model Fynanceo.Models.Inventario
@using Fynanceo.Models.Enums
@{
    ViewData["Title"] = "Conferir Inventário";
    ViewData["ActivePage"] = "estoque-inventario";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-clipboard-check me-2"></i>Conferir Inventário
        </h1>
        <div>
            <a href="@Url.Action("Inventario")" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-2"></i>Voltar
            </a>
            <a href="@Url.Action("DetalhesInventario", new { id = Model.Id })" class="btn btn-outline-primary me-2">
                <i class="fas fa-eye me-2"></i>Ver Detalhes
            </a>
            <form id="fecharInventarioForm" asp-controller="Estoque" asp-action="FecharInventario" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.Id" />
                @Html.AntiForgeryToken()
                <button type="button" class="btn btn-success" onclick="fecharInventario(@Model.Id)"
                        @(Model.Status != StatusInventario.Aberto && Model.Status != StatusInventario.EmAndamento ? "disabled" : "")>
                    <i class="fas fa-lock me-2"></i>Fechar Inventário
                </button>
            </form>
        </div>
    </div>

    <!-- Informações do Inventário -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">@Model.Descricao</h6>
                    <div>
                        <span class="badge @GetStatusInventarioBadgeClass(Model.Status) me-2">
                            @Model.Status
                        </span>
                        <span class="text-muted">
                            Aberto em: @Model.DataAbertura.ToString("dd/MM/yyyy HH:mm")
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center p-3 border rounded bg-light">
                                <div class="h4 mb-0 text-primary">
                                    @Model.Itens.Count(ii => ii.Conferido)/@Model.Itens.Count
                                </div>
                                <div class="text-muted">Itens Conferidos</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 border rounded bg-light">
                                <div class="h4 mb-0 text-warning">
                                    @Model.Itens.Count(ii => ii.Conferido && ii.Diferenca != 0)
                                </div>
                                <div class="text-muted">Com Diferença</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 border rounded bg-light">
                                <div class="h4 mb-0 text-success">
                                    @{
                                        var percentual = Model.Itens.Count > 0 ? 
                                            (Model.Itens.Count(ii => ii.Conferido) * 100) / Model.Itens.Count : 0;
                                    }
                                    @percentual%
                                </div>
                                <div class="text-muted">Progresso</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 border rounded bg-light">
                                <div class="h4 mb-0 text-info">
                                    @Model.Itens.Count
                                </div>
                                <div class="text-muted">Total de Itens</div>
                            </div>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Observacao))
                    {
                        <div class="mt-3">
                            <strong>Observações:</strong>
                            <p class="text-muted mb-0">@Model.Observacao</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Formulário de Conferência -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Conferência de Itens</h6>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="mostrarApenasPendentes" checked>
                <label class="form-check-label" for="mostrarApenasPendentes">
                    Mostrar apenas pendentes
                </label>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="conferenciaTable">
                    <thead class="thead-light">
                        <tr>
                            <th width="30"></th>
                            <th>Produto</th>
                            <th>Estoque Sistema</th>
                            <th>Estoque Físico</th>
                            <th>Diferença</th>
                            <th>Observações</th>
                            <th width="100">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Itens.OrderBy(i => !i.Conferido).ThenBy(i => i.Estoque.Nome))
                        {
                            <tr class="@(item.Conferido ? "table-success" : "table-light") item-row" 
                                data-conferido="@item.Conferido.ToString().ToLower()">
                                <td class="text-center">
                                    @if (!item.Conferido)
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-primary" 
                                                onclick="abrirModalConferencia(@item.Id, '@item.Estoque.Nome', @item.QuantidadeSistema, '@item.Estoque.UnidadeMedida')">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <i class="fas fa-check-circle text-success"></i>
                                    }
                                </td>
                                <td>
                                    <strong>@item.Estoque.Nome</strong>
                                    <br><small class="text-muted">@item.Estoque.Codigo - @item.Estoque.UnidadeMedida</small>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        @item.QuantidadeSistema.ToString("N2")
                                    </span>
                                </td>
                                <td>
                                    @if (item.Conferido)
                                    {
                                        <span class="badge @(item.QuantidadeFisica == item.QuantidadeSistema ? "bg-success" : "bg-warning")">
                                            @item.QuantidadeFisica.ToString("N2")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Conferido && item.Diferenca != 0)
                                    {
                                        <span class="@(item.Diferenca > 0 ? "text-success" : "text-danger")">
                                            @if (item.Diferenca > 0)
                                            {
                                                <i class="fas fa-arrow-up me-1"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-arrow-down me-1"></i>
                                            }
                                            @Math.Abs(item.Diferenca).ToString("N2")
                                        </span>
                                    }
                                    else if (item.Conferido)
                                    {
                                        <span class="text-success"><i class="fas fa-check"></i> OK</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Observacao))
                                    {
                                        <small title="@item.Observacao">@item.Observacao</small>
                                    }
                                </td>
                                <td>
                                    @if (item.Conferido)
                                    {
                                        <span class="badge bg-success">Conferido</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pendente</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Conferência -->
<div class="modal fade" id="conferenciaModal" tabindex="-1" aria-labelledby="conferenciaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="conferenciaModalLabel">
                    <i class="fas fa-clipboard-check me-2"></i>Conferir Item
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formConferencia" method="post" action="@Url.Action("ConferirItem", "Estoque")">
                @Html.AntiForgeryToken()
                <input type="hidden" id="itemInventarioId" name="itemId">
                <input type="hidden" id="inventarioId" name="inventarioId" value="@Model.Id">
                
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Produto</label>
                        <input type="text" class="form-control" id="produtoNome" readonly style="background-color: #f8f9fa;">
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Estoque Sistema</label>
                            <input type="text" class="form-control" id="estoqueSistema" readonly style="background-color: #f8f9fa;">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Unidade</label>
                            <input type="text" class="form-control" id="unidadeMedida" readonly style="background-color: #f8f9fa;">
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="quantidadeFisica" class="form-label">Estoque Físico *</label>
                        <input type="number" step="0.001" class="form-control" id="quantidadeFisica" 
                               name="quantidadeFisica" required min="0">
                        <small class="form-text text-muted">Quantidade encontrada na contagem física</small>
                    </div>
                    
                    <div class="mb-3">
                        <label for="observacao" class="form-label">Observações</label>
                        <textarea class="form-control" id="observacao" name="observacao" rows="2" 
                                  placeholder="Informações sobre a contagem..."></textarea>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        A diferença será calculada automaticamente após salvar.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary" id="btnConferir">
                        <i class="fas fa-save me-2"></i>Salvar Conferência
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            // Inicializar DataTable
            $('#conferenciaTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json'
                },
                order: [[0, 'desc']],
                pageLength: 25,
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: 0 }
                ]
            });

            // Filtro para mostrar apenas pendentes
            $('#mostrarApenasPendentes').on('change', function() {
                const mostrarApenasPendentes = $(this).is(':checked');
                
                if (mostrarApenasPendentes) {
                    $('.item-row[data-conferido="true"]').hide();
                } else {
                    $('.item-row').show();
                }
                
                // Reaplicar DataTable
                $('#conferenciaTable').DataTable().draw();
            });

            // Formulário de conferência
            $('#formConferencia').on('submit', function(e) {
                e.preventDefault();
                
                const quantidadeFisica = parseFloat($('#quantidadeFisica').val());
                if (isNaN(quantidadeFisica) || quantidadeFisica < 0) {
                    alert('Informe uma quantidade física válida!');
                    return false;
                }
                
                // Mostrar loading
                $('#btnConferir').html('<i class="fas fa-spinner fa-spin me-2"></i>Salvando...');
                $('#btnConferir').prop('disabled', true);
                
                // Enviar via AJAX
                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function(response) {
                        if (response.success) {
                            $('#conferenciaModal').modal('hide');
                            location.reload();
                        } else {
                            alert('Erro ao salvar conferência: ' + response.message);
                            $('#btnConferir').html('<i class="fas fa-save me-2"></i>Salvar Conferência');
                            $('#btnConferir').prop('disabled', false);
                        }
                    },
                    error: function() {
                        alert('Erro ao conectar com o servidor.');
                        $('#btnConferir').html('<i class="fas fa-save me-2"></i>Salvar Conferência');
                        $('#btnConferir').prop('disabled', false);
                    }
                });
            });
        });

        // Abrir modal de conferência
        function abrirModalConferencia(itemId, produtoNome, quantidadeSistema, unidadeMedida) {
            $('#itemInventarioId').val(itemId);
            $('#produtoNome').val(produtoNome);
            $('#estoqueSistema').val(quantidadeSistema);
            $('#unidadeMedida').val(unidadeMedida);
            $('#quantidadeFisica').val('');
            $('#observacao').val('');
            
            $('#conferenciaModal').modal('show');
            setTimeout(() => $('#quantidadeFisica').focus(), 500);
        }

        function fecharInventario(id) {
            if (confirm('Tem certeza que deseja fechar este inventário?\n\nApós o fechamento, serão gerados ajustes automáticos no estoque baseados nas diferenças encontradas.')) {
                const form = document.getElementById('fecharInventarioForm');
                if (form) form.submit();
            }
        }

        // Auto-refresh a cada 2 minutos para inventários ativos
        if (@((Model.Status == StatusInventario.Aberto || Model.Status == StatusInventario.EmAndamento).ToString().ToLower())) {
            setTimeout(function() {
                location.reload();
            }, 120000); // 2 minutos
        }
    </script>
}

@functions {
    public string GetStatusInventarioBadgeClass(StatusInventario status)
    {
        return status switch
        {
            StatusInventario.Aberto => "bg-warning text-dark",
            StatusInventario.EmAndamento => "bg-info",
            StatusInventario.Concluido => "bg-success",
            StatusInventario.Cancelado => "bg-danger",
            _ => "bg-secondary"
        };
    }
}