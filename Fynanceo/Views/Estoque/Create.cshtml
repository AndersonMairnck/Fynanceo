
@model Fynanceo.ViewModel.EstoquesModel.EstoqueViewModel
@{
    ViewData["Title"] = "Cadastro Materiais/Ingredientes/Revenda";
    ViewData["ActivePage"] = "estoque-produtos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
