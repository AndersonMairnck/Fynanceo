        </h1>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Voltar para Lista
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Dados do Produto</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" id="produtoForm">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Tipo de Item *</label>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="TipoItem" value="R" />
                                <label class="form-check-label">Revenda</label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="TipoItem" value="N" />
                                <label class="form-check-label">N√£o √© Revenda</label>
                            </div>

                            <span asp-validation-for="TipoItem" class="text-danger"></span>
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Nome" class="form-label">Nome do Produto *</label>
                                    <input asp-for="Nome" type="text" class="form-control" 
                                           placeholder="Ex: Farinha de Trigo, A√ß√∫car Refinado..." data-maiuscula="titulo" >
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Codigo" class="form-label">C√≥digo</label>
                                    <input asp-for="Codigo" type="text" class="form-control" 
                                           placeholder="C√≥digo interno (opcional)" data-maiuscula="tudo">
                                    <span asp-validation-for="Codigo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label asp-for="Descricao" class="form-label">Descri√ß√£o</label>
                                    <textarea asp-for="Descricao" class="form-control" rows="2" 
                                              placeholder="Descri√ß√£o detalhada do produto..."></textarea>
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="StatusUnidadeMedida" class="form-label">Unidade de Medida *</label>
                                    <select asp-for="StatusUnidadeMedida" class="form-select" required>
                                      
                                        <option value="1">Unidade</option>
                                        <option value="2">Quilograma (Kg)</option>
                                        <option value="3">Grama (g)</option>
                                        <option value="4">Litro (L)</option>
                                        <option value="5">Mililitro (ml)</option>
                                        <option value="6">Metro (m)</option>
                                        <option value="7">Cent√≠metro (cm)</option>
                                        <option value="8">Pacote</option>
                                        <option value="9">Caixa</option>
                                    </select>
                                    <span asp-validation-for="StatusUnidadeMedida" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="CustoUnitario" class="form-label">Custo Unit√°rio (R$) *</label>
                                    <input asp-for="CustoUnitario" type="text" step="0.01" class="form-control" 
                                           required min="0" value="0"   data-mask="moeda" >
                                    <span asp-validation-for="CustoUnitario" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Status" class="form-label">Status *</label>
                                    <select asp-for="Status" class="form-select" required>
                                        <option value="Ativo">Ativo</option>
                                        <option value="Inativo">Inativo</option>
                                        <option value="Bloqueado">Bloqueado</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="EstoqueAtual" class="form-label">Estoque Inicial *</label>
                                    <input asp-for="EstoqueAtual" type="number"  class="form-control" 
                                           required min="0" value="0">
                                    <span asp-validation-for="EstoqueAtual" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="EstoqueMinimo" class="form-label">Estoque M√≠nimo *</label>
                                    <input asp-for="EstoqueMinimo" type="number"  class="form-control" 
                                           required min="0" value="0">
                                    <span asp-validation-for="EstoqueMinimo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="EstoqueMaximo" class="form-label">Estoque M√°ximo</label>
                                    <input asp-for="EstoqueMaximo" type="number"  class="form-control" 
                                           min="0" value="0">
                                    <span asp-validation-for="EstoqueMaximo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @{
                                        var categoriasFixas = new List<string>
                                        {
                                            "Ingredientes Base",
                                            "L√≠quidos e Solventes",
                                            "Prote√≠nas e Derivados",
                                            "Especiarias e Temperos",
                                            "Frutas e Vegetais",
                                            "Latic√≠nios e Derivados",
                                            "Embalagens"
                                        };
                                    }

                                    <label asp-for="Categoria" class="form-label">Categoria</label>

                                    <input asp-for="Categoria" class="form-control" list="Categorias"/>

                                    <datalist id="Categorias">

                                        @* Categorias do Banco *@
                                        @if (Model.Categorias != null)
                                        {
                                            foreach (var c in Model.Categorias)
                                            {
                                                if (!string.IsNullOrWhiteSpace(c))
                                                {
                                                    <option value="@c"></option>
                                                }
                                            }
                                        }

                                        @* Categorias Fixas *@
                                        @foreach (var c in categoriasFixas)
                                        {
                                            <option value="@c"></option>
                                        }

                                    </datalist>

                                    <span asp-validation-for="Categoria" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="FornecedorId" class="form-label">Fornecedor</label>
                                    <div class="input-group">
                                        <select asp-for="FornecedorId" class="form-select" id="fornecedorSelect">
                                            <option value="">Selecione um fornecedor...</option>
                                            @if (Model.FornecedorId.HasValue && ViewBag.FornecedorSelecionadoNome != null)
                                            {
                                                <option value="@Model.FornecedorId" selected>@ViewBag.FornecedorSelecionadoNome</option>
                                            }
                                        </select>
                                        <a href="/Fornecedores/Create" class="btn btn-outline-primary" title="Cadastrar Novo Fornecedor">
                                            <i class="fas fa-plus"></i>
                                        </a>
                                    </div>
                                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Alertas de Valida√ß√£o -->
                        <div id="alertContainer"></div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary me-2" id="btnSalvar">
                                <i class="fas fa-save me-2"></i>Cadastrar Produto
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Informa√ß√µes de Ajuda -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-info-circle me-2"></i>Informa√ß√µes Importantes
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Estoque Inicial:</strong> Quantidade dispon√≠vel no momento do cadastro.
                    </div>
                    <div class="mb-3">
                        <strong>Estoque M√≠nimo:</strong> Sistema alertar√° quando chegar neste n√≠vel.
                    </div>
                    <div class="mb-3">
                        <strong>Estoque M√°ximo:</strong> Capacidade m√°xima de armazenamento (opcional).
                    </div>
                    <div class="mb-3">
                        <strong>Custo Unit√°rio:</strong> Pre√ßo de custo por unidade de medida.
                    </div>
                    <div class="mb-3">
                        <strong>Produtos por peso:</strong> Devem ser informados sempre em gramas (g).<br>
                       üëâ Exemplo: 100 g, 250 g, 1000 g
                    </div>
                    <div class="mb-3">
                        <strong>Produtos por volume :</strong> Devem ser informados sempre em mililitros (ml) <br>
                       üëâ Exemplo: 100 ml, 500 ml, 1000 ml
                    </div>
                    <div class="mb-3" align="center">
                        <strong>‚ö†Ô∏è Importante:</strong>
                        <p>Quando a unidade kg ou L for utilizada, n√£o √© permitido valor fracionado</p>
                        üëâ Exemplo v√°lido: 1 kg, 1 L<br>
                        ‚ùå Exemplo inv√°lido: 0,5 kg, 1,25 kg
                    </div>
                    
                    <hr>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Campos obrigat√≥rios</strong> est√£o marcados com *
                    </div>
                    
                </div>
            </div>

            <!-- Dicas R√°pidas -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-warning">
                        <i class="fas fa-lightbulb me-2"></i>Dicas R√°pidas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <i class="fas fa-check text-success me-2"></i>
                        Use c√≥digos curtos para facilitar buscas
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-check text-success me-2"></i>
                        Defina estoque m√≠nimo para receber alertas
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-check text-success me-2"></i>
                        Categorize produtos para melhor organiza√ß√£o
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-check text-success me-2"></i>
                        Cadastre fornecedores para rastreabilidade
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Inicializar Select2 para Fornecedor
            if ($.fn.select2) {
                $('#fornecedorSelect').select2({
                    theme: 'bootstrap-5',
                    width: '100%',
                    placeholder: 'Selecione um fornecedor...',
                    allowClear: true,
                    minimumInputLength: 4,
                    language: {
                        inputTooShort: function (args) {
                            var remaining = args.minimum - args.input.length;
                            return 'Digite ' + remaining + ' ou mais caracteres.';
                        },
                        searching: function () {
                            return 'Buscando...';
                        },
                        noResults: function () {
                            return 'Nenhum resultado encontrado';
                        },
                        errorLoading: function () {
                            return 'N√£o foi poss√≠vel carregar os resultados.';
                        },
                        loadingMore: function () {
                            return 'Carregando mais resultados...';
                        },
                        maximumSelected: function (args) {
                            return 'Voc√™ s√≥ pode selecionar ' + args.maximum + ' item(s).';
                        }
                    },
                    ajax: {
                        url: '/Fornecedores/BuscarSelect2',
                        dataType: 'json',
                        delay: 250,
                        data: function (params) {
                            return {
                                term: params.term,
                                page: params.page || 1,
                                pageSize: 20
                            };
                        },
                        processResults: function (data, params) {
                            params.page = params.page || 1;
                            return {
                                results: data.results,
                                pagination: {
                                    more: data.pagination && data.pagination.more
                                }
                            };
                        },
                        cache: true
                    }
                });
            }

            // Valida√ß√£o do formul√°rio
            $('#produtoForm').on('submit', function(e) {
                const nome = $('#Nome').val().trim();
                const unidade = $('#StatusUnidadeMedida').val();
                const custo = parseFloat($('#CustoUnitario').val());
                const estoqueAtual = parseFloat($('#EstoqueAtual').val());
                const estoqueMinimo = parseFloat($('#EstoqueMinimo').val());
                const estoqueMaximo = parseFloat($('#EstoqueMaximo').val());

                // Validar campos obrigat√≥rios
                if (!nome) {
                    e.preventDefault();
                    mostrarAlerta('Informe o nome do produto!', 'warning');
                    $('#Nome').focus();
                    return false;
                }

                if (!unidade) {
                    e.preventDefault();
                    mostrarAlerta('Selecione a unidade de medida!', 'warning');
                    $('#StatusUnidadeMedida').focus();
                    return false;
                }

                if (custo < 0) {
                    e.preventDefault();
                    mostrarAlerta('O custo unit√°rio n√£o pode ser negativo!', 'warning');
                    $('#CustoUnitario').focus();
                    return false;
                }

                if (estoqueAtual < 0) {
                    e.preventDefault();
                    mostrarAlerta('O estoque atual n√£o pode ser negativo!', 'warning');
                    $('#EstoqueAtual').focus();
                    return false;
                }

                if (estoqueMinimo < 0) {
                    e.preventDefault();
                    mostrarAlerta('O estoque m√≠nimo n√£o pode ser negativo!', 'warning');
                    $('#EstoqueMinimo').focus();
                    return false;
                }

                // Validar estoque m√°ximo
                if (estoqueMaximo > 0 && estoqueAtual > estoqueMaximo) {
                    e.preventDefault();
                    mostrarAlerta('O estoque atual n√£o pode ser maior que o estoque m√°ximo!', 'warning');
                    $('#EstoqueAtual').focus();
                    return false;
                }

                if (estoqueMaximo > 0 && estoqueMinimo > estoqueMaximo) {
                    e.preventDefault();
                    mostrarAlerta('O estoque m√≠nimo n√£o pode ser maior que o estoque m√°ximo!', 'warning');
                    $('#EstoqueMinimo').focus();
                    return false;
                }

                // Mostrar loading no bot√£o
                $('#btnSalvar').html('<i class="fas fa-spinner fa-spin me-2"></i>Cadastrando...');
                $('#btnSalvar').prop('disabled', true);
            });

            // Mostrar alerta
            function mostrarAlerta(mensagem, tipo) {
                const alertContainer = $('#alertContainer');
                alertContainer.html(`
                    <div class="alert alert-${tipo} alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>${mensagem}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `);
            }

            // Valida√ß√£o em tempo real para estoque m√°ximo
            $('#EstoqueMaximo, #EstoqueAtual, #EstoqueMinimo').on('change', function() {
                const estoqueAtual = parseFloat($('#EstoqueAtual').val()) || 0;
                const estoqueMinimo = parseFloat($('#EstoqueMinimo').val()) || 0;
                const estoqueMaximo = parseFloat($('#EstoqueMaximo').val()) || 0;

                if (estoqueMaximo > 0) {
                    if (estoqueAtual > estoqueMaximo) {
                        $('#EstoqueAtual').addClass('is-invalid');
                        mostrarAlerta('Estoque atual maior que o m√°ximo permitido!', 'warning');
                    } else {
                        $('#EstoqueAtual').removeClass('is-invalid');
                    }

                    if (estoqueMinimo > estoqueMaximo) {
                        $('#EstoqueMinimo').addClass('is-invalid');
                        mostrarAlerta('Estoque m√≠nimo maior que o m√°ximo permitido!', 'warning');
                    } else {
                        $('#EstoqueMinimo').removeClass('is-invalid');
                    }
                }
            });

            // Auto-gerar c√≥digo se estiver vazio
            $('#Nome').on('blur', function() {
                const codigoField = $('#Codigo');
                if (!codigoField.val().trim()) {
                    // Gerar c√≥digo baseado no nome (primeiras letras de cada palavra)
                    const nome = $(this).val().trim();
                    if (nome) {
                        const codigo = nome.split(' ')
                            .map(word => word.charAt(0).toUpperCase())
                            .join('')
                            .substring(0, 6);
                        codigoField.val(codigo);
                    }
                }
            });
        });
    </script>

    <style>
        /* Ajuste para Select2 no tema bootstrap-5 dentro de input-group */
        .input-group > .select2-container--bootstrap-5 {
            flex: 1 1 auto;
            width: 1% !important;
        }
        .input-group > .select2-container--bootstrap-5 .select2-selection {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }
    </style>
}