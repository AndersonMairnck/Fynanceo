@using Fynanceo.ViewModel
@using Fynanceo.ViewModel.CaixaModel

<!-- Views/Caixa/Abrir.cshtml -->
@model CaixaViewModel

@{
    ViewData["Title"] = "Abrir Caixa";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-lock-open me-2"></i>@ViewData["Title"]
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Abrir">
                    <div class="mb-3">
                        <label asp-for="SaldoInicial" class="form-label">Saldo Inicial *</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="SaldoInicial" class="form-control" type="number" step="0.01" min="0" value="0">
                        </div>
                        <span asp-validation-for="SaldoInicial" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Valor em dinheiro disponível no caixa no momento da abertura.
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label">Observações</label>
                        <textarea asp-for="Observacoes" class="form-control" rows="3"
                                  placeholder="Observações sobre a abertura do caixa..."></textarea>
                        <span asp-validation-for="Observacoes" class="text-danger"></span>
                    </div>

                    <div class="card card-body bg-info bg-opacity-10 border-start border-info border-3">
                        <h6><i class="fas fa-info-circle me-2"></i>Informações</h6>
                        <ul class="mb-0 small">
                            <li>O caixa será aberto com a data e hora atual</li>
                            <li>Você poderá adicionar movimentações após a abertura</li>
                            <li>Certifique-se do valor do saldo inicial</li>
                        </ul>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-check me-2"></i>Abrir Caixa
                        </button>
                        <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Formatação automática do valor
        $('#SaldoInicial').on('blur', function() {
            let value = parseFloat($(this).val());
            if (!isNaN(value)) {
                $(this).val(value.toFixed(2));
            }
        });
    </script>
}