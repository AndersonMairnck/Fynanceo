@model Fynanceo.Models.Funcionario

@{
    ViewData["Title"] = "Detalhes do Funcionário";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-info">
            <i class="fas fa-user-tie me-2"></i>@ViewData["Title"]
        </h1>
        <div>
            <a href="@Url.Action("Editar", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Editar
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Voltar
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-id-card me-2 text-info"></i>Informações Pessoais
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Nome Completo</label>
                                <p class="form-control-plaintext">@Model.NomeCompleto</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">CPF</label>
                                <p class="form-control-plaintext">@Model.CPF</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                         <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Status</label>
                                <p>
                                    <span class="badge @(Model.Ativo ? "bg-success" : "bg-danger")">
                                        @(Model.Ativo ? "Ativo" : "Inativo")
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Endereço</label>
                        <p class="form-control-plaintext">@(Model.Endereco ?? "Não informado")</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Telefone</label>
                                <p class="form-control-plaintext">@(Model.Telefone ?? "Não informado")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">E-mail</label>
                                <p class="form-control-plaintext">@(Model.Email ?? "Não informado")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-phone-alt me-2 text-info"></i>Contato de Emergência
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Nome do Contato</label>
                                <p class="form-control-plaintext">@(Model.ContatoEmergencia ?? "Não informado")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Telefone</label>
                                <p class="form-control-plaintext">@(Model.TelefoneEmergencia ?? "Não informado")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-briefcase me-2 text-info"></i>Dados Profissionais
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Cargo</label>
                        <p class="form-control-plaintext">
                            <span class="badge bg-primary">@Model.Cargo</span>
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Nível de Permissão</label>
                        <p class="form-control-plaintext">
                            <span class="badge @(Model.NivelPermissao == "Alto" ? "bg-danger" :
                                                                                Model.NivelPermissao == "Medio" ? "bg-warning" : "bg-secondary")">
                                @Model.NivelPermissao
                            </span>
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Turno</label>
                        <p class="form-control-plaintext">
                            <span class="badge bg-info">@Model.Turno</span>
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Data de Admissão</label>
                        <p class="form-control-plaintext">@Model.DataAdmissao.ToString("dd/MM/yyyy")</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Data de Cadastro</label>
                        <p class="form-control-plaintext">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2 text-info"></i>Estatísticas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center text-muted">
                        <i class="fas fa-chart-bar fa-2x mb-2"></i>
                        <p>Estatísticas de desempenho em breve</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>