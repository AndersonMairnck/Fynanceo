@model IEnumerable<Fynanceo.Models.Funcionario>

@{
    ViewData["Title"] = "Funcionários Cadastrados";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-info">
            <i class="fas fa-user-tie me-2"></i>@ViewData["Title"]
        </h1>
        <a href="@Url.Action("Cadastrar")" class="btn btn-info">
            <i class="fas fa-plus me-2"></i>Novo Funcionário
        </a>
    </div>

    <!-- Alertas -->
    @await Html.PartialAsync("_AlertasPartial")

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="tabela-funcionarios">
                    <thead class="table-info">
                        <tr>
                            <th>Nome</th>
                            <th>CPF</th>
                            <th>Cargo</th>
                            <th>Turno</th>
                            <th>Nível</th>
                            <th>Status</th>
                            <th>Admissão</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-placeholder me-3">
                                            <i class="fas fa-user-circle text-muted fa-2x"></i>
                                        </div>
                                        <div>
                                            <strong>@item.NomeCompleto</strong>
                                            @if (!string.IsNullOrEmpty(item.Email))
                                            {
                                                <br>
                                                <small class="text-muted">@item.Email</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>@item.CPF</td>
                                <td>
                                    <span class="badge bg-primary">@item.Cargo</span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@item.Turno</span>
                                </td>
                                <td>
                                    <span class="badge @(item.NivelPermissao == "Alto" ? "bg-danger" :
                                                                                                item.NivelPermissao == "Medio" ? "bg-warning" : "bg-success")">
                                    @item.NivelPermissao
                                </span>
                            </td>
                            <td>
                                <span class="badge @(item.Ativo ? "bg-success" : "bg-danger")">
                                    @(item.Ativo ? "Ativo" : "Inativo")
                                </span>
                            </td>
                            <td>@item.DataAdmissao.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("Detalhes", new { id = item.Id })"
                                       class="btn btn-info" title="Detalhes">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Editar", new { id = item.Id })"
                                       class="btn btn-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="@Url.Action("Excluir", new { id = item.Id })"
                                          class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este funcionário?');">
                                        <button type="submit" class="btn btn-danger" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                                                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th {
            border-top: none;
            font-weight: 600;
        }

        .btn-group .btn {
            border-radius: 0.375rem;
            margin: 0 2px;
        }

        #tabela-funcionarios tbody tr:hover {
            background-color: rgba(23, 162, 184, 0.05);
            transition: background-color 0.2s ease;
        }

        .avatar-placeholder {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
}

