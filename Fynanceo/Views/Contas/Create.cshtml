<!-- Views/Contas/Create.cshtml -->
@model Fynanceo.ViewModels.ContaViewModel

@{
    ViewData["Title"] = "Nova Conta";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="fas fa-plus-circle text-primary me-2"></i>@ViewData["Title"]
    </h1>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Voltar
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Informações da Conta</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Tipo" class="form-label">Tipo de Conta *</label>
                                <select asp-for="Tipo" class="form-select" id="tipoSelect" required>
                                    <option value="">Selecione...</option>
                                    <option value="1">Entrada (A Receber)</option>
                                    <option value="2">Saída (A Pagar)</option>
                                </select>
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Categoria" class="form-label">Categoria *</label>
                                <select asp-for="Categoria" class="form-select" required>
                                    <option value="">Selecione...</option>
                                    <option value="1">Venda</option>
                                    <option value="2">Taxa de Entrega</option>
                                    <option value="3">Comissão Entregador</option>
                                    <option value="4">Fornecedor</option>
                                    <option value="5">Salário</option>
                                    <option value="6">Aluguel</option>
                                    <option value="7">Luz</option>
                                    <option value="8">Água</option>
                                    <option value="9">Internet</option>
                                    <option value="10">Manutenção</option>
                                    <option value="11">Outros</option>
                                </select>
                                <span asp-validation-for="Categoria" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label">Descrição *</label>
                        <input asp-for="Descricao" class="form-control" placeholder="Descrição da conta...">
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Valor" class="form-label">Valor *</label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0.01">
                                </div>
                                <span asp-validation-for="Valor" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DataVencimento" class="form-label">Data de Vencimento *</label>
                                <input asp-for="DataVencimento" class="form-control" type="date">
                                <span asp-validation-for="DataVencimento" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FornecedorId" class="form-label">Fornecedor</label>
                                <select asp-for="FornecedorId" class="form-select">
                                    <option value="">Selecione um fornecedor...</option>
                                    @foreach (var fornecedor in Model.Fornecedores ?? new List<Fynanceo.Models.Fornecedor>())
                                    {
                                        <option value="@fornecedor.Id">@fornecedor.Nome</option>
                                    }
                                </select>
                                <span asp-validation-for="FornecedorId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FormaPagamento" class="form-label">Forma de Pagamento Prevista</label>
                                <select asp-for="FormaPagamento" class="form-select">
                                    <option value="">Selecione...</option>
                                    <option value="1">Dinheiro</option>
                                    <option value="2">Cartão Crédito</option>
                                    <option value="3">Cartão Débito</option>
                                    <option value="4">PIX</option>
                                    <option value="5">Vale Refeição</option>
                                    <option value="6">Vale Alimentação</option>
                                    <option value="7">Outros</option>
                                </select>
                                <span asp-validation-for="FormaPagamento" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ParcelaAtual" class="form-label">Parcela Atual</label>
                                <input asp-for="ParcelaAtual" class="form-control" type="number" min="1" placeholder="Ex: 1">
                                <span asp-validation-for="ParcelaAtual" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="TotalParcelas" class="form-label">Total de Parcelas</label>
                                <input asp-for="TotalParcelas" class="form-control" type="number" min="1" placeholder="Ex: 12">
                                <span asp-validation-for="TotalParcelas" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label">Observações</label>
                        <textarea asp-for="Observacoes" class="form-control" rows="3" placeholder="Observações sobre a conta..."></textarea>
                        <span asp-validation-for="Observacoes" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-check me-2"></i>Criar Conta
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Definir data de vencimento padrão para 7 dias à frente
        const hoje = new Date().toISOString().split('T')[0];
        const umaSemana = new Date();
        umaSemana.setDate(umaSemana.getDate() + 7);
        const umaSemanaFormatada = umaSemana.toISOString().split('T')[0];

        $('#DataVencimento').val(umaSemanaFormatada);

        // Formatação automática do valor
        $('#Valor').on('blur', function() {
            let value = parseFloat($(this).val());
            if (!isNaN(value)) {
                $(this).val(value.toFixed(2));
            }
        });
    </script>
}