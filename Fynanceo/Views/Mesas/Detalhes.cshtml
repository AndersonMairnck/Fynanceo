@model Fynanceo.Models.Mesa

@{
    ViewData["Title"] = "Detalhes da Mesa";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-warning">
            <i class="fas fa-chair me-2"></i>@ViewData["Title"]
        </h1>
        <div>
            <a href="@Url.Action("Editar", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Editar
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Voltar
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-chair fa-5x text-@(Model.Status == "Livre" ? "success" :
                                                                                     Model.Status == "Ocupada" ? "danger" :
                                                                                     Model.Status == "Reservada" ? "warning" : "secondary")"></i>
                    </div>

                    <h2 class="card-title">Mesa @Model.Numero</h2>

                    <p class="card-text">
                        <span class="badge bg-@(Model.Status == "Livre" ? "success" :
                                                                            Model.Status == "Ocupada" ? "danger" :
                                                                            Model.Status == "Reservada" ? "warning" : "secondary") fs-6">
                            @Model.Status
                        </span>
                    </p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2 text-warning"></i>Informações da Mesa
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Número da Mesa</label>
                        <p class="form-control-plaintext">@Model.Numero</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Capacidade</label>
                        <p class="form-control-plaintext">
                            <i class="fas fa-users me-2 text-muted"></i>@Model.Capacidade pessoas
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Localização</label>
                        <p class="form-control-plaintext">
                            <i class="fas fa-map-marker-alt me-2 text-muted"></i>@Model.Localizacao
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Ambiente</label>
                        <p class="form-control-plaintext">
                            <i class="fas fa-building me-2 text-muted"></i>@Model.Ambiente
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Data de Cadastro</label>
                        <p class="form-control-plaintext">
                            <i class="fas fa-calendar me-2 text-muted"></i>@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            @if (!string.IsNullOrEmpty(Model.Descricao))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-sticky-note me-2 text-warning"></i>Descrição
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="form-control-plaintext">@Model.Descricao</p>
                    </div>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-sync-alt me-2 text-warning"></i>Alterar Status
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AtualizarStatus" class="row g-2">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="col-md-8">
                            <select name="status" class="form-select">
                                <option value="Livre" selected="@(Model.Status == "Livre")">Livre</option>
                                <option value="Ocupada" selected="@(Model.Status == "Ocupada")">Ocupada</option>
                                <option value="Reservada" selected="@(Model.Status == "Reservada")">Reservada</option>
                                <option value="EmLimpeza" selected="@(Model.Status == "EmLimpeza")">Em Limpeza</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-warning w-100">
                                <i class="fas fa-sync me-1"></i>Atualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm mt-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history me-2 text-warning"></i>Histórico Rápido
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center text-muted">
                        <i class="fas fa-clock fa-2x mb-2"></i>
                        <p>Histórico de ocupações em breve</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>