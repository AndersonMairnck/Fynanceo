<!-- Views/Entregas/Index.cshtml -->
@model IEnumerable<Fynanceo.Models.Entrega>

@{
    ViewData["Title"] = "Entregas do Dia";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="fas fa-list text-primary me-2"></i>@ViewData["Title"]
    </h1>
    <div>
        <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary me-2">
            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
        </a>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nova Entrega
        </a>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <select class="form-select" id="statusFilter" onchange="filterEntregas()">
                    <option value="all">Todos os Status</option>
                    <option value="AguardandoEntregador">Pendentes</option>
                    <option value="SaiuParaEntrega">Saiu para Entrega</option>
                    <option value="EmRota">Em Rota</option>
                    <option value="Entregue">Entregues</option>
                    <option value="Cancelada">Canceladas</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" id="searchFilter" placeholder="Buscar por pedido ou endereço..." onkeyup="filterEntregas()">
            </div>
            <div class="col-md-3">
                <select class="form-select" id="entregadorFilter" onchange="filterEntregas()">
                    <option value="all">Todos os Entregadores</option>
                    @foreach (var entregador in ViewBag.Entregadores as List<Fynanceo.Models.Entregador> ?? new List<Fynanceo.Models.Entregador>())
                    {
                        <option value="@entregador.Id">@entregador.Nome</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button class="btn btn-outline-secondary w-100" onclick="resetFilters()">
                    <i class="fas fa-redo me-2"></i>Limpar Filtros
                </button>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Todas as Entregas de Hoje</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Pedido</th>
                        <th>Cliente</th>
                        <th>Endereço</th>
                        <th>Entregador</th>
                        <th>Status</th>
                        <th>Taxa</th>
                        <th>Tempo</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entrega in Model)
                    {
                        <tr class="entrega-row"
                            data-status="@entrega.Status"
                            data-pedido="@entrega.Pedido?.NumeroPedido"
                            data-entregador="@entrega.EntregadorId">
                            <td>
                                <strong>@entrega.Pedido?.NumeroPedido</strong>
                                <br>
                                <small class="text-muted">@entrega.DataCriacao.ToLocalTime().ToString("HH:mm")</small>
                            </td>
                            <td>
                                @entrega.Pedido?.Cliente?.NomeCompleto
                                <br>
                                <small class="text-muted">@entrega.Pedido?.Cliente?.Telefone</small>
                            </td>
                            <td>
                                <small>Cidade: @entrega.EnderecoEntrega.Cidade</small><br>
                                <small>Rua/Av.: @entrega.EnderecoEntrega.Logradouro</small><br>
                                <small>Bairro: @entrega.EnderecoEntrega.Bairro</small>

                                @if (!string.IsNullOrEmpty(entrega.Complemento))
                                {
                                    <br>
                                    <small class="text-muted">@entrega.Complemento</small>
                                }
                            </td>
                            <td>
                                @if (entrega.Entregador != null)
                                {
                                    <text>@entrega.Entregador.Nome</text>
                                    <br>
                                    <small class="text-muted">@entrega.Entregador.Telefone</small>
                                }
                                else
                                {
                                    <span class="text-muted">Não atribuído</span>
                                }
                            </td>
                            <td>
                                @{
                                    var statusClass = "";
                                    var statusText = "";
                                    switch (entrega.Status)
                                    {
                                        case Fynanceo.Models.Enums.StatusEntrega.AguardandoEntregador:
                                            statusClass = "bg-warning text-dark";
                                            statusText = "Pendente";
                                            break;
                                        case Fynanceo.Models.Enums.StatusEntrega.SaiuParaEntrega:
                                            statusClass = "bg-info text-white";
                                            statusText = "Saiu";
                                            break;
                                        case Fynanceo.Models.Enums.StatusEntrega.EmRota:
                                            statusClass = "bg-primary text-white";
                                            statusText = "Em Rota";
                                            break;
                                        case Fynanceo.Models.Enums.StatusEntrega.Entregue:
                                            statusClass = "bg-success text-white";
                                            statusText = "Entregue";
                                            break;
                                        case Fynanceo.Models.Enums.StatusEntrega.Cancelada:
                                            statusClass = "bg-danger text-white";
                                            statusText = "Cancelada";
                                            break;
                                        case Fynanceo.Models.Enums.StatusEntrega.Problema:
                                            statusClass = "bg-dark text-white";
                                            statusText = "Problema";
                                            break;
                                    }
                                }
                                <span class="badge @statusClass">@statusText</span>
                            </td>
                            <td>
                                <strong>R$ @entrega.TaxaEntrega.ToString("N2")</strong>
                            </td>
                            <td>
                                @{
                                    var tempo = DateTime.UtcNow - entrega.DataCriacao.ToLocalTime();
                                    <small>@((int)tempo.TotalMinutes)m</small>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("Details", new { id = entrega.Id })"
                                       class="btn btn-outline-primary" title="Detalhes">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (entrega.Status == Fynanceo.Models.Enums.StatusEntrega.AguardandoEntregador)
                                    {
                                        <button class="btn btn-outline-success"
                                                title="Atribuir Entregador"
                                                onclick="atribuirEntregador(@entrega.Id)">
                                            <i class="fas fa-user-plus"></i>
                                        </button>
                                    }
                                    @if (entrega.Status != Fynanceo.Models.Enums.StatusEntrega.Entregue &&
                                                                    entrega.Status != Fynanceo.Models.Enums.StatusEntrega.Cancelada)
                                    {
                                        <button class="btn btn-outline-info"
                                                title="Atualizar Status"
                                                onclick="atualizarStatus(@entrega.Id)">
                                            <i class="fas fa-sync-alt"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Atribuir Entregador -->
<div class="modal fade" id="atribuirModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Atribuir Entregador</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="entregaId">
                <div class="mb-3">
                    <label class="form-label">Selecionar Entregador</label>
                    <select class="form-select" id="entregadorSelect">
                        <option value="">Selecione um entregador...</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="confirmarAtribuicao()">Atribuir</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Atualizar Status -->
<div class="modal fade" id="statusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Atualizar Status da Entrega</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="entregaStatusId">
                <div class="mb-3">
                    <label class="form-label">Novo Status</label>
                    <select class="form-select" id="statusSelect">
                        <option value="SaiuParaEntrega">Saiu para Entrega</option>
                        <option value="EmRota">Em Rota</option>
                        <option value="Entregue">Entregue</option>
                        <option value="Cancelada">Cancelada</option>
                        <option value="Problema">Problema</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Observação</label>
                    <textarea class="form-control" id="observacaoStatus" rows="3" placeholder="Observação opcional..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="confirmarStatus()">Atualizar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filtros
        function filterEntregas() {
            const status = $('#statusFilter').val();
            const search = $('#searchFilter').val().toLowerCase();
            const entregador = $('#entregadorFilter').val();

            $('.entrega-row').each(function() {
                const row = $(this);
                const rowStatus = row.data('status');
                const rowPedido = row.data('pedido').toLowerCase();
                const rowEntregador = row.data('entregador')?.toString();

                const statusMatch = status === 'all' || rowStatus === status;
                const searchMatch = rowPedido.includes(search) || row.find('td').eq(2).text().toLowerCase().includes(search);
                const entregadorMatch = entregador === 'all' || rowEntregador === entregador;

                row.toggle(statusMatch && searchMatch && entregadorMatch);
            });
        }

        function resetFilters() {
            $('#statusFilter').val('all');
            $('#searchFilter').val('');
            $('#entregadorFilter').val('all');
            filterEntregas();
        }

        // Atribuir entregador
        async function atribuirEntregador(entregaId) {
            $('#entregaId').val(entregaId);

            // Carregar entregadores disponíveis
            const response = await fetch('@Url.Action("ObterEntregadoresDisponiveis", "Entregas")');
            const entregadores = await response.json();

            const select = $('#entregadorSelect');
            select.empty().append('<option value="">Selecione um entregador...</option>');

            entregadores.forEach(entregador => {
                select.append(`<option value="${entregador.id}">${entregador.nome} - ${entregador.telefone}</option>`);
            });

            $('#atribuirModal').modal('show');
        }

        async function confirmarAtribuicao() {
            const entregaId = $('#entregaId').val();
            const entregadorId = $('#entregadorSelect').val();

            if (!entregadorId) {
                alert('Selecione um entregador');
                return;
            }

            const response = await fetch(`@Url.Action("AtribuirEntregador", "Entregas")?id=${entregaId}&entregadorId=${entregadorId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            });

            const result = await response.json();

            if (result.success) {
                $('#atribuirModal').modal('hide');
                location.reload();
            } else {
                alert('Erro: ' + result.message);
            }
        }

        // Atualizar status
        function atualizarStatus(entregaId) {
            $('#entregaStatusId').val(entregaId);
            $('#statusSelect').val('');
            $('#observacaoStatus').val('');
            $('#statusModal').modal('show');
        }

        async function confirmarStatus() {
            const entregaId = $('#entregaStatusId').val();
            const status = $('#statusSelect').val();
            const observacao = $('#observacaoStatus').val();

            if (!status) {
                alert('Selecione um status');
                return;
            }

            const response = await fetch(`@Url.Action("AtualizarStatus", "Entregas")?id=${entregaId}&novoStatus=${status}&observacao=${encodeURIComponent(observacao)}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            });

            const result = await response.json();

            if (result.success) {
                $('#statusModal').modal('hide');
                location.reload();
            } else {
                alert('Erro: ' + result.message);
            }
        }

        // Auto-refresh a cada 30 segundos
       @*  setInterval(() => {
            location.reload();
        }, 300000); *@
    </script>
}